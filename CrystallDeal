using System;

namespace ОбучениеДиск
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Сколько у вас денех?");
            int amountOfMoney = Convert.ToInt32(Console.ReadLine());
            int amountOfMoneyRest;
            int crystallPrice = 14;
            Console.WriteLine("Сколько хотите купить кристаллов?");
            int crystallAmountToBuy = Convert.ToInt32(Console.ReadLine());
            bool enoughMoney;
            Console.WriteLine($"Добрый день, у нас как раз завоз новых кристаллов, цена одного {crystallPrice}," +
                $" не хотите купить?");
            enoughMoney = (amountOfMoney - (crystallAmountToBuy * crystallPrice) > 0);
            amountOfMoneyRest = (amountOfMoney -(crystallAmountToBuy * crystallPrice) * Convert.ToInt32(enoughMoney));
            crystallAmountToBuy *= Convert.ToInt32(enoughMoney);
            Console.WriteLine($"Кристталлов куплено:денег осталось - {crystallAmountToBuy}:{amountOfMoneyRest}!");
        }
    }
}

using System;

namespace ОбучениеДиск
{
    class Program
    {
        static void Main(string[] args)
        {
            int allMinutes;
            int waitingHours;
            int waitingMinutes;
            int numberOfBabushkas;
            Console.WriteLine("Среднее время приема одного человека - 10 минут. Введите количество бабушек перед вами в очереди:");
            int numberOfBabushkas = Convert.ToInt64(Console.ReadLine());
            int allMinutes = numberOfBabushkas * 10;
            int waitingHours = allMinutes / 60;
            int waitingMinutes = allMinutes % 60;
            Console.WriteLine($"Время ожидание в очереди: {waitingHours}:{waitingMinutes}!");
        }
    }
}

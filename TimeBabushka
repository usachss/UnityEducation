using System;

namespace ОбучениеДиск
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Среднее время приема - 10 минут. Введите количество бабушек перед вами в очереди:");
            int CountBabushka = Convert.ToInt32(Console.ReadLine());
            int FullTimeInMinutes = CountBabushka * 10;
            int hours = FullTimeInMinutes / 60;
            int minutes = FullTimeInMinutes % 60;
            Console.WriteLine($"Время ожидание в очереди: {hours}:{minutes}!");
        }
    }
}

using System;

namespace StringSign
{
    class Program
    {
        static void Main(string[] args)
        {
            string correctPassword;
            string tryingPassword;
            int triesInverseCounter;
            correctPassword = "PAROL";
            triesInverseCounter = 3;
            while (triesInverseCounter > 0)
            {
                Console.WriteLine("\nВведите пароль");
                tryingPassword = Console.ReadLine();
                triesInverseCounter--;
                if (tryingPassword==correctPassword)
                {
                    Console.WriteLine("Секретное сообщение");
                    break;
                }
                else
                {
                    Console.WriteLine("Пароль НЕ верен");
                    Console.WriteLine("Попыток осталось" + triesInverseCounter);
                }
            }
        }
    }
}
